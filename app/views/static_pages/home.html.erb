<div class="row">
  <div class="container">
    <div class="col-md-6 top-card-padding">
      <div class="card">
        <h1 class="card_header">
          Community Service
        </h1>
        <div class="post_text">
          <table>
            <% @organizations.each do |organization| %>
                <tr>
                  <td><%= link_to organization.name, "community_service_events/#{organization.id}" %></td>
                  <td style="padding-right: 20px;"></td>
                  <td><%= organization_total_hours(organization) %> Hours</td>
                </tr>
            <% end %>
          </table>
        </div>
        <div class="clear"> </div>
      </div>
    </div>

    <div class="col-md-6 top-card-padding">
      <div class="card">
        <h1 class="card_header">
          Philanthropy
        </h1>
        <div class="post_text">
          <table>
            <% @organizations.each do |organization| %>
                <tr>
                  <td><%= link_to organization.name, "philanthropy_events/#{organization.id}" %></td>
                  <td style="padding-right: 20px;"></td>
                  <td><%= organization_total_raised(organization) %> Dollars</td>
                </tr>
            <% end %>
          </table>
        </div>
        <div class="clear"> </div>
      </div>
    </div>
  </div>
</div>