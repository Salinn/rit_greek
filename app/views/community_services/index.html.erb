<p id="notice"><%= notice %></p>
<div class="row">
  <div class="container top-card-padding">
    <div class="card">
      <div style="float: left">
        <h1>Community Service Events</h1>
      </div>
      <div style="float: right">
        <%= link_to 'New Community Service Event', new_community_service_path %>
      </div>
      <div class="container"></div>
      <div style="display: block">
      <table>
        <thead>
        <tr>
          <th>Event</th>
          <th>Total hours</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @community_services.each do |community_service| %>
            <tr>
              <td><%= community_service.event.name %></td>
              <td><%= community_service.total_hours %></td>
              <td><%= link_to 'Show', community_service %></td>
              <td><%= link_to 'Edit', edit_community_service_path(community_service) %></td>
              <td><%= link_to 'Destroy', community_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>