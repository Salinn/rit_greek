<p id="notice"><%= notice %></p>

<h1>Listing Philanthropies</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Total raised</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @philanthropies.each do |philanthropy| %>
      <tr>
        <td><%= philanthropy.event %></td>
        <td><%= philanthropy.total_raised %></td>
        <td><%= link_to 'Show', philanthropy %></td>
        <td><%= link_to 'Edit', edit_philanthropy_path(philanthropy) %></td>
        <td><%= link_to 'Destroy', philanthropy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

